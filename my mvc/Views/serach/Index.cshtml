@model IEnumerable<DataLaayer.page>

@{
    ViewBag.Title = "archivenews";
}
<div class="m99">
    <section class="last-news-section border-radius margin-top-60">
        <header><i class="icons icon-doc-2"></i>  <h3>تعداد:"@Model.Count()" با عبارت "@ViewBag.name"</h3> </header>
        <ul>

            @foreach (var item in Model)
            {
                <li>
                    <img class="border-radius" src="/PageImages/@item.ImageName">
                    <h2> <a href="/new/@item.PageID"> @item.Title </a></h2>
                    <p>
                        @item.ShortDescription
                    </p>
                    <span class="date-publish"><i class="fa fa-calendar"></i> انتشار : @item.CreateDate.ToShamsi() </span>
                    <a href="" class="more-link"><i class="icons icon-more"></i></a>
                </li>
            }

        </ul>
    </section>
</div>

<link href="~/StyleSheet1.css" rel="stylesheet" />
